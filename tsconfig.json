{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    /* "rootDir": "./src", */ // <-- Menghapus ini akan memperbaiki error 'rootDir'
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "__test__/**/*"], // <-- Ini sudah benar
  "exclude": ["node_modules"]
}